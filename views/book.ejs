<% if(book != null ) { %>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%- book.name %></li>
    </ol>
  </nav>


  <div class="row">

    <div class="col-12 col-md-4">
      <img src="/uploads/<%- book.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- book.name %>" loading="lazy">
    </div>

    <div class="col-12 col-md-8">
      <div class="row">
        <div class="col-12"><h1><%- book.name %></h1></div>
        <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- book.category %></div>
        <div class="col-12" style="white-space: pre-line;">
          <h4>Description</h4>
          <%- book.description %>
        </div>
      </div>

      <div class="row pt-4">
        <div class="col-12">
          <h4>Songs</h4>
          <ul class="list-group list-group-flush">
            <% book.songs.forEach(function(songs, index){ %>
              <li class="list-group-item"><%= songs %></li>
            <% }) %>
          </ul> 
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <p>No item found.</p>
<% } %>